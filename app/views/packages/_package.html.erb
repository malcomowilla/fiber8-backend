<div id="<%= dom_id package %>">
  <p>
    <strong>Name:</strong>
    <%= package.name %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= package.price %>
  </p>

  <p>
    <strong>Download limit:</strong>
    <%= package.download_limit %>
  </p>

  <p>
    <strong>Upload limit:</strong>
    <%= package.upload_limit %>
  </p>

  <p>
    <strong>Account:</strong>
    <%= package.account_id %>
  </p>

  <p>
    <strong>Tx rate limit:</strong>
    <%= package.tx_rate_limit %>
  </p>

  <p>
    <strong>Rx rate limit:</strong>
    <%= package.rx_rate_limit %>
  </p>

  <p>
    <strong>Validity period units:</strong>
    <%= package.validity_period_units %>
  </p>

  <p>
    <strong>Download burst limit:</strong>
    <%= package.download_burst_limit %>
  </p>

  <p>
    <strong>Upload burst limit:</strong>
    <%= package.upload_burst_limit %>
  </p>

  <p>
    <strong>Validity:</strong>
    <%= package.validity %>
  </p>

  <p>
    <strong>Mikrotik:</strong>
    <%= package.mikrotik_id %>
  </p>

</div>
